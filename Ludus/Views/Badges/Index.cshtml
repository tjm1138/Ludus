@model IEnumerable<Ludus.Models.Badge>

@{
    ViewBag.Title = "Index";
}

<h2>My Badges</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SectionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th></th>
    </tr>

@foreach (var badge in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => badge.SectionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => badge.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => badge.Id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=badge.Id }) |
            @Html.ActionLink("Details", "Details", new { id=badge.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=badge.Id })
        </td>
    </tr>
}

</table>
