@model IEnumerable<Ludus.Models.Section>

@{
    ViewBag.Title = "Index";
}

<h2>Sections</h2>

<p>
    @* a link to create new sections *@
    @Html.ActionLink("Create New", "Create")
</p>

@* Contruct a table and headers for the table *@
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Session.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Limit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
  
@* Fills in table will all the sections *@
@foreach (var section in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => section.Session.Name)</td>
        <td>@Html.DisplayFor(modelItem => section.Course.Name)</td>
        <td>@Html.DisplayFor(modelItem => section.Number)</td>
        <td>@Html.DisplayFor(modelItem => section.Limit)</td>
        <td>@Html.DisplayFor(modelItem => section.Description)</td>
        <td>
            @* a link to edit sections *@
            @Html.ActionLink("Edit", "Edit", new { id=section.Id }) |
            @* a link to delete sections *@
            @Html.ActionLink("Delete", "Delete", new { id=section.Id })
        </td>
    </tr>
}

</table>
