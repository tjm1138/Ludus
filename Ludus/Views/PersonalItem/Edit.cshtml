@model Ludus.Models.PersonalItem

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PersonalItem</legend>

        @Html.HiddenFor(model => model.Id)

               <div class="editor-label" style="width:200px; float:left;">
            @Html.LabelFor(model => model.Due)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Due)
            @Html.ValidationMessageFor(model => model.Due)
        </div>

        <div class="editor-label" style="width:200px; float:left; margin-top:10px;">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field" style="margin-top:10px;">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label" style="width:200px; float:left; margin-top:10px;">
            @Html.LabelFor(model => model.Notes)
        </div>
        <div class="editor-field" style="margin-top:10px;">
            @Html.EditorFor(model => model.Notes)
            @Html.ValidationMessageFor(model => model.Notes)
        </div>

        <div class="editor-label" style="width:200px; float:left; margin-top:10px; margin-bottom:10px;">
            @Html.LabelFor(model => model.Complete)
        </div>
        <div class="editor-field" style="margin-top:10px; margin-bottom:10px;">
            @Html.EditorFor(model => model.Complete)
            @Html.ValidationMessageFor(model => model.Complete)
        </div>

        <p>
            <input type="submit" value="Create" class="btn btn-success"/>
        </p>
    </fieldset>
}
@if (ViewBag.goHome)
{
    @Html.ActionLink("Back Home", "Index", "Home")
}
else
{
    @Html.ActionLink("Back to List", "Index")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
