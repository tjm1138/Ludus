                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="divider"></li>
                        <li><a tabindex="-1" href="http://ludus-support.cloudapp.net:8080/secure/Dashboard.jspa" target="_new">Jira</a></li>
                        <li><a tabindex="-1" href="~/Documents/Ludus SRS.docx">Ludus SRS</a></li>
                      </ul>
                    </li>
                    <ul class="nav pull-right">
                       @Html.Partial("_LoginPartial")
                    </ul>
                  </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div class="container">

    @RenderBody()

    </div> <!-- /container -->

